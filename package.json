{
  "name": "util.leader",
  "version": "0.0.1",
  "author": "jmquigley <jmquigley@outlook.com>",
  "description": "Writes a leader/banner to the given logger",
  "private": false,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jmquigley/util.leader"
  },
  "bugs": {
    "url": "https://github.com/jmquigley/util.leader/issues"
  },
  "engines": {
    "node": ">=6.5"
  },
  "dependencies": {
    "lodash": "^4.17.4",
    "object-assign": "^4.1.1",
    "yargs": "^6.5.0",
    "fs-extra": "^2.0.0"
  },
  "devDependencies": {
    "ava": "^0.17.0",
    "xo": "^0.17.1"
  },
  "main": "index.js",
  "bin": {
    "leader": "./cli.js"
  },
  "scripts": {
    "test": "xo && ava --verbose"
  },
  "xo": {
    "space": 4,
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "global": [
      "window",
      "describe",
      "it",
      "JSON"
    ],
    "rules": {
      "import/no-dynamic-require": "off",
      "import/no-unresolved": "off",
      "no-unused-vars": "off",
      "space-before-function-paren": "off",
      "no-multiple-empty-lines": [
        "error",
        {
          "max": 2,
          "maxEOF": 1
        }
      ],
      "unicorn/filename-case": [
        "error",
        {
          "case": "snakeCase"
        }
      ],
      "arrow-parens": [
        "error",
        "as-needed"
      ]
    }
  }
}
