{
  "name": "util.leader",
  "version": "0.0.40",
  "author": "jmquigley <jmquigley@outlook.com>",
  "description": "Writes a leader/banner to the given logger",
  "main": "./index.js",
  "types": "./index.d.ts",
  "bin": {
    "leader": "./cli.js"
  },
  "private": false,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jmquigley/util.leader"
  },
  "bugs": {
    "url": "https://github.com/jmquigley/util.leader/issues"
  },
  "readmeFilename": "README.md",
  "engines": {
    "node": ">=7.x"
  },
  "dependencies": {
    "lodash": "^4.17.11"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.119",
    "@types/node": "^10.12.18",
    "coveralls": "^3.0.2",
    "jest": "^23.6.0",
    "tslint": "^5.12.0",
    "typescript": "^3.2.2",
    "typescript-babel-jest": "^1.0.5",
    "util.pkgwrap": "^0.0.94"
  },
  "pkgwrap": {
    "bail": true,
    "cleanup": [
      "cli.d.ts",
      "cli.js",
      "index.d.ts",
      "index.js"
    ]
  },
  "jest": {
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx",
      "ts",
      "tsx",
      "json"
    ],
    "notify": false,
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "transform": {
      "^.+\\.ts?$": "typescript-babel-jest"
    },
    "verbose": false
  },
  "scripts": {
    "all": "yarn install && yarn run build && yarn test",
    "build": "yarn run clean && yarn run lint && pkgwrap --build",
    "clean": "pkgwrap --clean",
    "coverage": "pkgwrap --coverage --jest",
    "lint": "pkgwrap --lint",
    "prepublishOnly": "yarn run all",
    "test": "pkgwrap --testing --jest"
  }
}
