{
	"name": "util.leader",
	"version": "0.0.13",
	"author": "jmquigley <jmquigley@outlook.com>",
	"description": "Writes a leader/banner to the given logger",
	"private": false,
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/jmquigley/util.leader"
	},
	"bugs": {
		"url": "https://github.com/jmquigley/util.leader/issues"
	},
	"readmeFilename": "README.md",
	"engines": {
		"node": ">=6.5"
	},
	"dependencies": {
		"expand-home-dir": "0.0.3",
		"fs-extra": "^2.0.0",
		"lodash": "^4.17.4",
		"object-assign": "^4.1.1",
		"util.pkgwrap": "0.0.3",
		"util.rstrip": "0.0.5",
		"yargs": "^6.6.0"
	},
	"devDependencies": {
		"ava": "^0.17.0",
		"coveralls": "^2.11.15",
		"nyc": "^10.1.2",
		"xo": "^0.17.1"
	},
	"main": "index.js",
	"bin": {
		"leader": "./cli.js"
	},
	"scripts": {
		"postinstall": "pkgwrap --postinstall",
		"test": "pkgwrap --testing",
		"report": "pkgwrap --reporting",
		"coverage": "pkgwrap --coverage"
	},
	"xo": {
		"env": {
			"browser": true,
			"node": true,
			"es6": true
		},
		"global": [
			"window",
			"describe",
			"it",
			"JSON"
		],
		"rules": {
			"space-before-function-paren": "off",
			"unicorn/filename-case": [
				"error",
				{
					"case": "snakeCase"
				}
			],
			"arrow-parens": [
				"error",
				"as-needed"
			]
		}
	}
}
